---
const navLinks = [
  { href: "/", label: "Home" },
  { href: "/blog", label: "Blog" },
  { href: "/projects", label: "Projects" },
  { href: "/about", label: "About" },
];
---

<header class="site-header">
  <nav>
    <a href="/" class="logo">JLog</a>
    <ul class="nav-links">
      {
        navLinks.map((link) => (
          <li>
            <a href={link.href}>{link.label}</a>
          </li>
        ))
      }
    </ul>
    <button id="theme-toggle" aria-label="Toggle theme">üåì</button>
  </nav>
</header>

<style>
  .site-header {
    padding: 1rem 2rem;
    display: flex;
    justify-content: center;
    background: var(--bg);
    color: var(--text);
    border-bottom: 1px solid var(--border);
  }

  nav {
    width: 100%;
    max-width: 960px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo {
    font-weight: bold;
    font-size: 1.2rem;
    text-decoration: none;
    color: var(--text);
  }

  .nav-links {
    list-style: none;
    display: flex;
    gap: 1.2rem;
    margin: 0;
    padding: 0;
  }

  .nav-links a {
    text-decoration: none;
    color: var(--text);
    font-size: 0.95rem;
  }

  .nav-links a:hover {
    color: var(--link-color);
  }

  #theme-toggle {
    background: none;
    border: none;
    font-size: 1.25rem;
    cursor: pointer;
    color: var(--text);
  }
</style>

<script is:inline>
  const storageKey = "theme";
  const classNameDark = "dark";
  const toggle = document.getElementById("theme-toggle");

  const applyTheme = (isDark) => {
    document.documentElement.classList.toggle(classNameDark, isDark);
  };

  const savedTheme = localStorage.getItem(storageKey);
  const systemPrefersDark = window.matchMedia(
    "(prefers-color-scheme: dark)"
  ).matches;

  applyTheme(savedTheme === "dark" || (!savedTheme && systemPrefersDark));

  toggle.addEventListener("click", () => {
    const isDark = document.documentElement.classList.toggle(classNameDark);
    localStorage.setItem(storageKey, isDark ? "dark" : "light");
    toggle.textContent = isDark ? "üåô" : "‚òÄÔ∏è";
  });
</script>
