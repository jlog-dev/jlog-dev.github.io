---
const navLinks = [
  { href: "/", label: "Home" },
  { href: "/blog", label: "Blog" },
  { href: "/projects", label: "Projects" },
  { href: "/snippets", label: "Snippets" },
  { href: "/prompts", label: "AI Prompts" },
  { href: "/til", label: "TIL" },
  { href: "/bookmarks", label: "Bookmarks" },
  { href: "/about", label: "About" },
];
---

<header class="site-header">
  <nav>
    <a href="/" class="logo">JLog</a>
    <ul class="nav-links">
      {
        navLinks.map((link) => (
          <li>
            <a href={link.href}>{link.label}</a>
          </li>
        ))
      }
    </ul>
    <button id="theme-toggle" aria-label="Toggle theme">üåì</button>
  </nav>
</header>

<style>
  .site-header {
    padding: var(--spacing-md) var(--spacing-xl);
    display: flex;
    justify-content: center;
    background: var(--bg-primary);
    color: var(--text-primary);
    border-bottom: 1px solid var(--border-primary);
  }

  nav {
    width: 100%;
    max-width: var(--container-wide-max-width);
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo {
    font-weight: var(--font-weight-bold);
    font-size: var(--font-size-xl);
    text-decoration: none;
    color: var(--text-primary);
  }

  .nav-links {
    list-style: none;
    display: flex;
    gap: var(--spacing-lg);
    margin: 0;
    padding: 0;
  }

  .nav-links a {
    text-decoration: none;
    color: var(--text-primary);
    font-size: var(--font-size-base);
    transition: color var(--transition-base);
  }

  .nav-links a:hover {
    color: var(--color-link);
  }

  #theme-toggle {
    background: none;
    border: none;
    font-size: var(--font-size-xl);
    cursor: pointer;
    color: var(--text-primary);
    transition: color var(--transition-base);
  }

  #theme-toggle:hover {
    color: var(--color-link);
  }
</style>

<script is:inline>
  const storageKey = "theme";
  const classNameDark = "dark";
  const toggle = document.getElementById("theme-toggle");

  const applyTheme = (isDark) => {
    document.documentElement.classList.toggle(classNameDark, isDark);
  };

  const savedTheme = localStorage.getItem(storageKey);
  const systemPrefersDark = window.matchMedia(
    "(prefers-color-scheme: dark)"
  ).matches;

  applyTheme(savedTheme === "dark" || (!savedTheme && systemPrefersDark));

  toggle.addEventListener("click", () => {
    const isDark = document.documentElement.classList.toggle(classNameDark);
    localStorage.setItem(storageKey, isDark ? "dark" : "light");
    toggle.textContent = isDark ? "üåô" : "‚òÄÔ∏è";
  });
</script>
