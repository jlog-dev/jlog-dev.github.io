<footer class="site-footer">
  <div class="footer-grid">
    <div class="left">
      <div class="social-icons">
        <a
          href="https://github.com/jlog-dev"
          target="_blank"
          aria-label="GitHub">GitHub</a
        >
        <a href="mailto:you@example.com" aria-label="Email">Email</a>
      </div>
      <p class="copyright">
        © {new Date().getFullYear()} Jing Li • All rights reserved.
      </p>
    </div>
    <div class="right wechat-box">
      <img src="/wechat-qrcode.png" alt="WeChat QR Code" />
      <p class="caption">Follow me on WeChat</p>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    padding: 2rem 1rem;
    background: var(--footer-bg);
    border-top: 1px solid var(--border);
    font-size: 0.95rem;
    color: var(--subtle-text);
  }

  .footer-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    max-width: 960px;
    margin: 0 auto;
    gap: 1.5rem;
  }

  .left {
    flex: 1;
  }

  .social-icons {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 0.75rem;
  }

  .social-icons a {
    color: var(--icon-color, #555);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .social-icons a:hover {
    color: var(--link-color, #0070f3);
  }

  .copyright {
    font-size: 0.85rem;
    color: var(--meta-text);
  }

  .wechat-box {
    text-align: center;
  }

  .wechat-box img {
    width: 96px;
    height: 96px;
    border: 1px solid var(--border);
    border-radius: 8px;
    object-fit: contain;
  }

  .caption {
    font-size: 0.8rem;
    margin-top: 0.4rem;
    color: var(--meta-text);
  }

  @media (max-width: 640px) {
    .footer-grid {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .left,
    .right {
      width: 100%;
    }
  }
</style>
