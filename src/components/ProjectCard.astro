---
const { name, description, href, tech = [] } = Astro.props;
---

<article class="card">
  <a href={href} class="card-link" target="_blank" rel="noopener noreferrer">
    <h2>{name}</h2>
    <p class="desc">{description}</p>

    {
      tech.length > 0 && (
        <div class="tech-list">
          {tech.map((t) => (
            <span class="tech">{t}</span>
          ))}
        </div>
      )
    }
  </a>
</article>

<style>
  .card {
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: 10px;
    padding: 1.25rem;
    transition:
      box-shadow 0.2s ease,
      transform 0.15s ease,
      background 0.3s ease;
  }

  .card:hover {
    box-shadow: 0 4px 14px rgba(0, 0, 0, 0.05);
    transform: translateY(-3px);
  }

  .card-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  h2 {
    font-size: 1.2rem;
    margin: 0 0 0.5rem;
    color: var(--link-color);
  }

  .desc {
    font-size: 0.95rem;
    margin-bottom: 0.75rem;
    color: var(--subtle-text);
  }

  .tech-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
  }

  .tech {
    background: var(--tag-bg);
    font-size: 0.75rem;
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    color: var(--tag-color);
  }
</style>
