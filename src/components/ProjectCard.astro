---
const { name, description, href, tech = [] } = Astro.props;
---

<article class="card">
  <a href={href} class="card-link" target="_blank" rel="noopener noreferrer">
    <h2>{name}</h2>
    <p class="desc">{description}</p>

    {
      tech.length > 0 && (
        <div class="tech-list">
          {tech.map((t: string) => (
            <span class="tech">{t}</span>
          ))}
        </div>
      )
    }
  </a>
</article>

<style>
  .card {
    background: rgba(22, 33, 62, 0.8);
    border: 2px solid var(--border-primary);
    border-radius: var(--radius-xl);
    padding: var(--spacing-lg);
    transition:
      box-shadow var(--transition-base),
      transform var(--transition-fast),
      background var(--transition-slow),
      border-color var(--transition-base);
    backdrop-filter: blur(10px);
    position: relative;
    overflow: hidden;
    box-shadow: var(--shadow-sm);
  }

  .card:hover {
    box-shadow: var(--shadow-glow-pink);
    transform: translateY(-4px);
    border-color: var(--color-neon-pink);
    background: rgba(26, 26, 46, 0.9);
  }

  .card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: var(--bg-gradient);
    transform: scaleX(0);
    transition: transform var(--transition-base);
    box-shadow: 0 0 10px var(--color-neon-cyan);
  }

  .card:hover::before {
    transform: scaleX(1);
  }

  .card-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  h2 {
    font-size: var(--font-size-xl);
    margin: 0 0 var(--spacing-sm);
    color: var(--text-primary);
    font-weight: var(--font-weight-medium);
    font-family: var(--font-family-display);
    text-transform: uppercase;
    letter-spacing: 0.02em;
    transition: all var(--transition-base);
  }

  .card:hover h2 {
    color: var(--color-neon-cyan);
    text-shadow: 0 0 5px var(--color-neon-cyan);
  }

  .desc {
    font-size: var(--font-size-base);
    margin-bottom: var(--spacing-sm);
    color: var(--text-secondary);
    line-height: var(--line-height-base);
  }

  .tech-list {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-xs);
  }

  .tech {
    background: rgba(0, 245, 255, 0.1);
    font-size: var(--font-size-xs);
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: var(--radius-sm);
    color: var(--color-neon-cyan);
    border: 1px solid var(--color-neon-cyan);
    font-family: var(--font-family-mono);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: all var(--transition-base);
    box-shadow: 0 0 3px rgba(0, 245, 255, 0.3);
  }

  .card:hover .tech {
    background: rgba(255, 0, 255, 0.1);
    border-color: var(--color-neon-pink);
    color: var(--color-neon-pink);
    box-shadow: 0 0 5px var(--color-neon-pink);
  }
</style>
