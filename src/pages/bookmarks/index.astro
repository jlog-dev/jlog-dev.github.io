---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { ExternalLink } from "lucide-astro";
import { getAllBookmarks, formatDate } from "../../utils/content";

const bookmarks = await getAllBookmarks();
---

<BaseLayout title="Bookmarks">
  <div class="container">
    <header class="page-header">
      <h1>ðŸ”– Bookmarks</h1>
      <p>Curated collection of useful resources, articles, and tools I've discovered.</p>
    </header>

    <div class="bookmarks-grid">
      {bookmarks.map((bookmark) => (
        <article class="bookmark-card">
          <h2>
            <a href={bookmark.data.url} target="_blank" rel="noopener noreferrer">
              {bookmark.data.title}
              <ExternalLink size={14} class="external-icon" />
            </a>
          </h2>
          <p class="description">{bookmark.data.description}</p>
          
          <div class="bookmark-meta">
            <span class="category">{bookmark.data.category}</span>
            {bookmark.data.rating && (
              <span class="rating">
                {'â˜…'.repeat(bookmark.data.rating)}{'â˜†'.repeat(5 - bookmark.data.rating)}
              </span>
            )}
            {bookmark.data.author && (
              <span class="author">by {bookmark.data.author}</span>
            )}
          </div>

          {bookmark.data.notes && (
            <div class="notes">
              <strong>Notes:</strong> {bookmark.data.notes}
            </div>
          )}

          <div class="tags">
            {bookmark.data.tags.map((tag) => (
              <span class="tag">{tag}</span>
            ))}
          </div>

          <div class="bookmark-footer">
            <time class="date">{formatDate(bookmark.data.pubDate)}</time>
            {bookmark.data.site && (
              <span class="site">{bookmark.data.site}</span>
            )}
          </div>
        </article>
      ))}
    </div>

    {bookmarks.length === 0 && (
      <div class="empty-state">
        <p>No bookmarks yet. Great resources coming soon!</p>
      </div>
    )}
  </div>

  <style>
    .container {
      max-width: 800px;
      margin: 0 auto;
      padding: 2rem 1rem;
    }

    .page-header {
      text-align: center;
      margin-bottom: 3rem;
    }

    .page-header h1 {
      font-size: 2.5rem;
      margin-bottom: 0.5rem;
      color: var(--text-primary);
    }

    .page-header p {
      color: var(--text-secondary);
      font-size: 1.1rem;
    }

    .bookmarks-grid {
      display: grid;
      gap: 2rem;
    }

    .bookmark-card {
      background: var(--bg-secondary);
      padding: 2rem;
      border-radius: var(--radius-lg);
      transition: transform 0.2s ease, box-shadow 0.2s ease;
      border: 1px solid var(--border-color);
    }

    .bookmark-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    }

    .bookmark-card h2 {
      margin: 0 0 1rem 0;
      font-size: 1.3rem;
    }

    .bookmark-card h2 a {
      color: var(--text-primary);
      text-decoration: none;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .bookmark-card h2 a:hover {
      color: var(--color-accent);
    }

    .external-icon {
      font-size: 0.8em;
      opacity: 0.6;
    }

    .description {
      color: var(--text-secondary);
      line-height: 1.6;
      margin-bottom: 1.5rem;
    }

    .bookmark-meta {
      display: flex;
      gap: 0.75rem;
      margin-bottom: 1rem;
      flex-wrap: wrap;
      align-items: center;
    }

    .bookmark-meta span {
      padding: 0.25rem 0.75rem;
      border-radius: var(--radius-full);
      font-size: 0.8rem;
      font-weight: 500;
    }

    .category {
      background: var(--color-primary);
      color: white;
    }

    .rating {
      background: var(--color-warning);
      color: white;
      font-family: monospace;
    }

    .author {
      background: var(--color-info);
      color: white;
    }

    .notes {
      background: var(--bg-tertiary);
      padding: 1rem;
      border-radius: var(--radius-md);
      margin-bottom: 1rem;
      font-size: 0.9rem;
      line-height: 1.5;
      color: var(--text-secondary);
    }

    .notes strong {
      color: var(--text-primary);
    }

    .tags {
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
      margin-bottom: 1rem;
    }

    .tag {
      background: var(--tag-bg);
      color: var(--tag-color);
      padding: 0.25rem 0.5rem;
      border-radius: var(--radius-sm);
      font-size: 0.75rem;
    }

    .bookmark-footer {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding-top: 1rem;
      border-top: 1px solid var(--border-color);
      font-size: 0.8rem;
      color: var(--text-muted);
    }

    .empty-state {
      text-align: center;
      padding: 4rem 2rem;
      color: var(--text-secondary);
    }
  </style>
</BaseLayout>
