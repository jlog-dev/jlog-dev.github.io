---
import { type CollectionEntry, getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { calculateReadingTime, formatDate } from '../../utils/content';

export async function getStaticPaths() {
  const bookmarks = await getCollection('bookmarks');
  return bookmarks.map((bookmark) => ({
    params: { slug: bookmark.slug },
    props: bookmark,
  }));
}

type Props = CollectionEntry<'bookmarks'>;

const bookmark = Astro.props;
const { Content } = await bookmark.render();
const readingTime = calculateReadingTime(bookmark.body);
---

<BaseLayout title={bookmark.data.title}>
  <article class="bookmark-post">
    <header class="bookmark-header">
      <div class="bookmark-badge">üîñ Bookmark</div>
      <h1>
        <a href={bookmark.data.url} target="_blank" rel="noopener noreferrer" class="bookmark-title">
          {bookmark.data.title}
          <span class="external-icon">‚Üó</span>
        </a>
      </h1>
      <p class="description">{bookmark.data.description}</p>
      
      <div class="bookmark-meta">
        <span class="category">{bookmark.data.category}</span>
        {bookmark.data.rating && (
          <span class="rating">
            {'‚òÖ'.repeat(bookmark.data.rating)}{'‚òÜ'.repeat(5 - bookmark.data.rating)}
          </span>
        )}
        <span class="reading-time">{readingTime.text}</span>
        <time class="date">{formatDate(bookmark.data.pubDate)}</time>
      </div>

      {bookmark.data.author && (
        <div class="author-info">
          <strong>Author:</strong> {bookmark.data.author}
          {bookmark.data.site && <span> ‚Ä¢ {bookmark.data.site}</span>}
        </div>
      )}

      {bookmark.data.tags.length > 0 && (
        <div class="tags">
          {bookmark.data.tags.map((tag: string) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}
    </header>

    {bookmark.data.notes && (
      <section class="personal-notes">
        <h2>üìù My Notes</h2>
        <div class="notes-content">
          {bookmark.data.notes}
        </div>
      </section>
    )}

    <section class="bookmark-content">
      <Content />
    </section>

    <div class="bookmark-actions">
      <a href={bookmark.data.url} target="_blank" rel="noopener noreferrer" class="visit-link">
        Visit Resource ‚Üí
      </a>
    </div>
  </article>

  <nav class="bookmark-nav">
    <a href="/bookmarks" class="back-link">‚Üê Back to Bookmarks</a>
  </nav>

  <style>
    .bookmark-post {
      max-width: 800px;
      margin: 0 auto;
      padding: 2rem 1rem;
    }

    .bookmark-header {
      margin-bottom: 3rem;
      text-align: center;
    }

    .bookmark-badge {
      display: inline-block;
      background: var(--color-info);
      color: white;
      padding: 0.5rem 1rem;
      border-radius: var(--radius-full);
      font-size: 0.9rem;
      font-weight: 500;
      margin-bottom: 1.5rem;
    }

    .bookmark-header h1 {
      font-size: 2.5rem;
      margin-bottom: 1rem;
      line-height: 1.2;
    }

    .bookmark-title {
      color: var(--text-primary);
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      transition: color 0.2s ease;
    }

    .bookmark-title:hover {
      color: var(--color-accent);
    }

    .external-icon {
      font-size: 0.6em;
      opacity: 0.7;
    }

    .description {
      font-size: 1.2rem;
      color: var(--text-secondary);
      line-height: 1.6;
      margin-bottom: 2rem;
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
    }

    .bookmark-meta {
      display: flex;
      justify-content: center;
      gap: 1rem;
      flex-wrap: wrap;
      margin-bottom: 1.5rem;
    }

    .bookmark-meta span {
      padding: 0.5rem 1rem;
      border-radius: var(--radius-full);
      font-size: 0.9rem;
      font-weight: 500;
    }

    .category {
      background: var(--color-primary);
      color: white;
      text-transform: capitalize;
    }

    .rating {
      background: var(--color-warning);
      color: white;
      font-family: monospace;
    }

    .reading-time {
      background: var(--bg-secondary);
      color: var(--text-secondary);
    }

    .date {
      background: var(--bg-secondary);
      color: var(--text-muted);
    }

    .author-info {
      color: var(--text-secondary);
      margin-bottom: 1.5rem;
      font-size: 0.95rem;
    }

    .tags {
      display: flex;
      justify-content: center;
      gap: 0.5rem;
      flex-wrap: wrap;
    }

    .tag {
      background: var(--tag-bg);
      color: var(--tag-color);
      padding: 0.25rem 0.75rem;
      border-radius: var(--radius-sm);
      font-size: 0.8rem;
    }

    .personal-notes {
      background: var(--bg-secondary);
      padding: 2rem;
      border-radius: var(--radius-lg);
      margin-bottom: 3rem;
      border-left: 4px solid var(--color-accent);
    }

    .personal-notes h2 {
      margin: 0 0 1rem 0;
      color: var(--text-primary);
      font-size: 1.3rem;
    }

    .notes-content {
      color: var(--text-secondary);
      line-height: 1.6;
      font-style: italic;
    }

    .bookmark-content {
      line-height: 1.7;
      color: var(--text-primary);
    }

    .bookmark-content :global(h2) {
      margin-top: 3rem;
      margin-bottom: 1rem;
      color: var(--text-primary);
      border-bottom: 2px solid var(--border-color);
      padding-bottom: 0.5rem;
    }

    .bookmark-content :global(h3) {
      margin-top: 2rem;
      margin-bottom: 1rem;
      color: var(--text-primary);
    }

    .bookmark-content :global(ul) {
      margin: 1.5rem 0;
      padding-left: 2rem;
    }

    .bookmark-content :global(li) {
      margin-bottom: 0.5rem;
      line-height: 1.6;
    }

    .bookmark-actions {
      text-align: center;
      margin: 3rem 0;
    }

    .visit-link {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      background: var(--color-accent);
      color: white;
      padding: 1rem 2rem;
      border-radius: var(--radius-lg);
      text-decoration: none;
      font-weight: 500;
      font-size: 1.1rem;
      transition: all 0.2s ease;
    }

    .visit-link:hover {
      background: var(--color-accent-dark);
      transform: translateY(-2px);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
    }

    .bookmark-nav {
      max-width: 800px;
      margin: 3rem auto 0;
      padding: 0 1rem;
    }

    .back-link {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      color: var(--color-accent);
      text-decoration: none;
      font-weight: 500;
      padding: 0.75rem 1.5rem;
      background: var(--bg-secondary);
      border-radius: var(--radius-md);
      transition: all 0.2s ease;
    }

    .back-link:hover {
      background: var(--color-accent);
      color: white;
      transform: translateX(-2px);
    }

    @media (max-width: 768px) {
      .bookmark-header h1 {
        font-size: 2rem;
      }

      .bookmark-meta {
        justify-content: center;
      }

      .bookmark-meta span {
        font-size: 0.8rem;
        padding: 0.4rem 0.8rem;
      }

      .personal-notes {
        padding: 1.5rem;
      }
    }
  </style>
</BaseLayout>
