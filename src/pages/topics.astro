---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Explore by Topic">
  <h1>🗂 Explore by Topic</h1>
  <div class="topics">
    <a href="/tags/technical" class="topic">💻 Technical</a>
    <a href="/tags/projects" class="topic">🛠 Projects</a>
    <a href="/tags/writing" class="topic">✍️ Writing</a>
    <a href="/tags/thoughts" class="topic">🧠 Thoughts</a>
  </div>

  <style>
    .topics {
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
      margin-top: 2rem;
    }

    .topic {
      padding: 1rem 1.5rem;
      background: #f9f9f9;
      border-radius: 8px;
      border: 1px solid #eee;
      font-size: 1.1rem;
      text-decoration: none;
      color: #333;
      transition: all 0.2s ease;
    }

    .topic:hover {
      background: #f0f4ff;
      color: #0070f3;
      border-color: #cce;
    }
  </style>
</BaseLayout>
