---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getAllTILPosts, formatDate } from "../../utils/content";

const tilPosts = await getAllTILPosts();
---

<BaseLayout title="Today I Learned">
  <div class="container">
    <header class="page-header">
      <h1>ðŸ’¡ Today I Learned</h1>
      <p>Quick notes and discoveries from my daily learning journey.</p>
    </header>

    <div class="til-grid">
      {tilPosts.map((post) => (
        <article class="til-card">
          <h2>
            <a href={`/til/${post.slug}`}>{post.data.title}</a>
          </h2>
          <p class="description">{post.data.description}</p>
          
          <div class="til-meta">
            <span class="category">{post.data.category}</span>
            <span class="difficulty">{post.data.difficulty}</span>
            <time class="date">{formatDate(post.data.pubDate)}</time>
          </div>

          <div class="tags">
            {post.data.tags.map((tag) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        </article>
      ))}
    </div>

    {tilPosts.length === 0 && (
      <div class="empty-state">
        <p>No TIL posts yet. Learning never stops!</p>
      </div>
    )}
  </div>

  <style>
    .container {
      max-width: 800px;
      margin: 0 auto;
      padding: 2rem 1rem;
    }

    .page-header {
      text-align: center;
      margin-bottom: 3rem;
    }

    .page-header h1 {
      font-size: 2.5rem;
      margin-bottom: 0.5rem;
      color: var(--text-primary);
    }

    .page-header p {
      color: var(--text-secondary);
      font-size: 1.1rem;
    }

    .til-grid {
      display: grid;
      gap: 1.5rem;
    }

    .til-card {
      background: var(--bg-secondary);
      padding: 1.5rem;
      border-radius: var(--radius-lg);
      transition: transform 0.2s ease, box-shadow 0.2s ease;
      border-left: 4px solid var(--color-accent);
    }

    .til-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    }

    .til-card h2 {
      margin: 0 0 0.75rem 0;
      font-size: 1.2rem;
    }

    .til-card h2 a {
      color: var(--text-primary);
      text-decoration: none;
    }

    .til-card h2 a:hover {
      color: var(--color-accent);
    }

    .description {
      color: var(--text-secondary);
      line-height: 1.6;
      margin-bottom: 1rem;
    }

    .til-meta {
      display: flex;
      gap: 0.5rem;
      margin-bottom: 1rem;
      flex-wrap: wrap;
      align-items: center;
    }

    .til-meta span {
      padding: 0.25rem 0.75rem;
      border-radius: var(--radius-full);
      font-size: 0.8rem;
      font-weight: 500;
    }

    .category {
      background: var(--color-primary);
      color: white;
    }

    .difficulty {
      background: var(--color-warning);
      color: white;
    }

    .date {
      color: var(--text-muted);
      font-size: 0.8rem;
      margin-left: auto;
    }

    .tags {
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
    }

    .tag {
      background: var(--tag-bg);
      color: var(--tag-color);
      padding: 0.25rem 0.5rem;
      border-radius: var(--radius-sm);
      font-size: 0.75rem;
    }

    .empty-state {
      text-align: center;
      padding: 4rem 2rem;
      color: var(--text-secondary);
    }
  </style>
</BaseLayout>
