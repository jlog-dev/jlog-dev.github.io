---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "../styles/global.css";

const {
  title = "JLog",
  description = "A blog about development, ideas, and digital thinking by Jing Li.",
  type = "website",
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Cyberpunk Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;700;900&family=Rajdhani:wght@300;400;500;600;700&family=Fira+Code:wght@300;400;500;600&display=swap" rel="stylesheet">

    <!-- RSS Feed -->
    <link
      rel="alternate"
      type="application/rss+xml"
      title="RSS Feed"
      href="/rss.xml"
    />

    <!-- Open Graph -->
    <meta property="og:type" content={type} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta
      property="og:url"
      content={`https://jlog-dev.github.io${Astro.url.pathname}`}
    />
  </head>
  <body class="cyberpunk-body">
    <!-- Matrix Rain Background -->
    <div class="matrix-bg" id="matrix-canvas"></div>
    
    <Header />
    <main class="full-width-main" style="padding-top: calc(60px + var(--spacing-2xl));">
      <slot />
    </main>
    <Footer />
    
    <!-- Cyberpunk Global Styles -->
    <style>
      .cyberpunk-body {
        background: var(--bg-primary);
        color: var(--text-primary);
        font-family: var(--font-family-base);
        position: relative;
        overflow-x: hidden;
      }
      
      .matrix-bg {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        opacity: 0.1;
        pointer-events: none;
        background: 
          radial-gradient(circle at 20% 50%, rgba(0, 245, 255, 0.1) 0%, transparent 50%),
          radial-gradient(circle at 80% 20%, rgba(255, 0, 255, 0.1) 0%, transparent 50%),
          radial-gradient(circle at 40% 80%, rgba(0, 255, 65, 0.1) 0%, transparent 50%);
        animation: matrix-shift 10s ease-in-out infinite;
      }
      
      @keyframes matrix-shift {
        0%, 100% { transform: translate(0, 0) rotate(0deg); }
        33% { transform: translate(-10px, -10px) rotate(1deg); }
        66% { transform: translate(10px, 10px) rotate(-1deg); }
      }
      
      /* Global Cyberpunk Scrollbar */
      ::-webkit-scrollbar {
        width: 8px;
      }
      
      ::-webkit-scrollbar-track {
        background: var(--bg-secondary);
      }
      
      ::-webkit-scrollbar-thumb {
        background: var(--color-neon-cyan);
        border-radius: 4px;
        box-shadow: 0 0 5px var(--color-neon-cyan);
      }
      
      ::-webkit-scrollbar-thumb:hover {
        background: var(--color-neon-pink);
        box-shadow: 0 0 10px var(--color-neon-pink);
      }
    </style>
  </body>
</html>

<style>
  .full-width-main {
    width: 100%;
    min-height: 100vh;
    scroll-snap-type: y mandatory;
    overflow-y: auto;
  }
  
  /* Global scroll snap for sections */
  html {
    scroll-behavior: smooth;
  }
</style>
