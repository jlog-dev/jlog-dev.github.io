---
const { title, pubDate, tech, repo } = Astro.props;
---

<article class="project-detail">
  <h1>{title}</h1>
  <p class="meta">
    <time datetime={pubDate}>
      {
        new Date(pubDate).toLocaleDateString("en-US", {
          year: "numeric",
          month: "short",
          day: "numeric",
        })
      }
    </time>
    {tech && tech.length > 0 && <> â€¢ {tech.join(", ")}</>}
  </p>

  {
    repo && (
      <p>
        <a href={repo} target="_blank">
          ðŸ”— GitHub Repo
        </a>
      </p>
    )
  }
  <slot />
</article>

<style>
  .project-detail {
    max-width: 720px;
    margin: 3rem auto;
    padding: 0 1rem;
    line-height: 1.7;
  }

  .project-detail h1 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .meta {
    color: #777;
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }

  a {
    color: #0070f3;
  }
</style>
