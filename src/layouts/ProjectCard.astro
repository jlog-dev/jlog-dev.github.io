---
const { name, description, href } = Astro.props;
---

<article class="card">
  <a href={href} target="_blank" rel="noopener noreferrer">
    <h2>{name}</h2>
    <p>{description}</p>
  </a>
</article>

<style>
  .card {
    background: #fff;
    border: 1px solid #eee;
    border-radius: 8px;
    padding: 1rem 1.25rem;
    transition:
      box-shadow 0.2s ease,
      transform 0.1s ease;
  }

  .card:hover {
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
    transform: translateY(-2px);
    border-color: #ddd;
  }

  h2 {
    margin: 0 0 0.5rem;
    font-size: 1.2rem;
    color: #0070f3;
  }

  p {
    margin: 0;
    font-size: 0.95rem;
    color: #444;
    line-height: 1.4;
  }
</style>
